                    }
                });
            //};
        });

        function DeleteMovie(movieid) {
            $.ajax({
                url: '@Url.Action("DeleteMovieConfirmed")',
                    type: "POST",
                    data: { id: movieid },
                    success: function (data) {
                        $(this).hide();
                    },
                    error: function () {
                    }
                });
            }

        $("#CreateActorForm").submit(function () {
            $.ajax({
                url: '@Url.Action("CreateActor")',
