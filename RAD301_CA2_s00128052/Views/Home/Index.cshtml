                    $('#RandomMovie').hide();
                    $('#RandomActor').hide();
                    $('.jumbotron').hide();
                    $('#Form').hide();
                    $('#DataTable').hide();
                    $('#DataTable').html(data);
                    $('#DataTable').fadeIn("slow");
