@using RAD301_CA2_s00128052.Models
@model Actor

<h3 class="col-sm-offset-1">Create Actor<a onclick="$('#CreateActorForm').hide(), AllActors()" style="margin-left:30px;" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove" style="margin-right:5px;"/>Cancel</a></h3>

<div class="form-group">
    <label for="ActorFirstName" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorFirstName):</label>
        <div class="col-sm-4"><input id="ActorFirstNameCreate" type="text" name="ActorFirstName" class="form-control"/></div>
</div>
<div class="form-group">
    <label for="ActorSurname" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorSurname):</label>
        <div class="col-sm-4"><input id="ActorSurnameCreate" type="text" name="ActorSurname" class="form-control"/></div>
</div>
<div class="form-group">
    <label for="ActorDescription" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorDescription):</label>
        <div class="col-sm-4"><input type="text" id="ActorDescription" name="ActorDescription" class="form-control"/></div>
</div>
<div class="form-group">
    <label for="ActorDOB" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorDOB):</label>
        <div class="col-sm-4"><input id="ActorDOB" type="text" name="ActorDOB" class="form-control datepicker" data-date-format="dd/mm/yyyy" data-provide="datepicker"/></div>
</div>
<div class="form-group">
    <label for="ActorGender" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorGender):</label>
           <div class="col-sm-4"> @foreach (Gender g in Enum.GetValues(typeof(Gender)))
            {
                <input type="radio" name="ActorGender" value="@g" >@g
            }</div>
    
</div>
<div class="form-group">
    <label for="ActorImageUrl" class="col-sm-2 control-label">@Html.DisplayNameFor(modelItem => Model.ActorImageUrl):</label>
        <div class="col-sm-4"><input id="ActorImageUrl" type="url" name="ActorImageUrl" class="form-control" /></div>
</div>

